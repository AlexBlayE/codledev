{
    "compilerOptions": {
      "target": "ESNext",                         
      "module": "NodeNext",                         
      "moduleResolution": "NodeNext",            
      "outDir": "dist",
      "sourceMap": false,                                                              
      "noEmitOnError": true,                           
      "esModuleInterop": true,                           
      "forceConsistentCasingInFileNames": true,         
      "strict": true,                                     
      "noImplicitAny": true,                            
      "strictNullChecks": true,                    
      "skipDefaultLibCheck": true,                    
      "skipLibCheck": true,
    },
    "include": [
      "src/**/*.ts"],
    "exclude": [
      "node_modules",
      "tests"
    ]
  }
  