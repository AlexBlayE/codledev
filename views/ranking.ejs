<% 
    let windowTitle = null;
    let ranking = null;
    let username = null;
    let problemsSolved = null;
    let loginToSee = null;

    switch (abreviation) {
        default:
            windowTitle = "Codle - Un problema de código al día";
            ranking = "Posición";
            username = "Nombre";
            problemsSolved = "Problemas resueltos";
            loginToSee = "Inicia sesión para ver la clasificación";
            break;
        case "en":
            windowTitle = "Codle - A daily code problem";
            ranking = "Rank";
            username = "Username";
            problemsSolved = "Problems Solved";
            loginToSee = "Log in to see the ranking";
            break;
        case "ca":
            windowTitle = "Codle - Un problema de codi al dia";
            ranking = "Posició";
            username = "Nom";
            problemsSolved = "Problemes resolts";
            loginToSee = "Inicia sessió per veure el rànking";
            break;
    }
 %>


<!DOCTYPE html>
<html lang="<%- abreviation %>">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- windowTitle %></title>
    <link rel="icon" type="image/svg" href="/img/favicon.svg" />
    <meta name="description"
        content="Refuerza tus conocimientos de código retándote con un problema diario disponible en varios lenguajes de programación.">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inconsolata&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/list.css">
    <link rel="stylesheet" href="/css/ranking.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/animations.css">
    <script src="/js/ranking.js" type="module" defer></script>
    <script src="/js/list.js" defer></script>
    <script type="module" src="/js/main.js" defer></script>
    <script src="/js/formsManagement.js" defer></script>
</head>

<body>
    <%- include('./components/header') %>
    <main>
        <div id="list">
            <div id="search-bar">
                <ul id="search-filters">
                    <li><input id="username" name="username" type="text" placeholder="<%- username %>"></li>
                </ul>
                <div id="search-btn">
                    <img class="invert" src="/img/magnifying-glass.svg">
                </div>
            </div>
            <div id="ranking-list">
                <% if (isLogged) { %>
                <table>
                    <thead>
                        <tr>
                            <th><%- ranking %></th>
                            <th><%- username %></th>
                            <th><%- problemsSolved %></th>
                        </tr>
                    </thead>
                    <tbody id="list-items">
                        <tr>
                            <td>1</td>
                            <td>Hedy Lamarr</td>
                            <td>69</td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>Michael Faraday</td>
                            <td>65</td>
                        </tr>
                        <tr>
                            <td>3</td>
                            <td>Joe Biden</td>
                            <td>63</td>
                        </tr>
                    </tbody>
                </table>
                <% } else { %>
                    <p><%- loginToSee %></p>
                <% } %>
            </div>
        </div>
    </main>
</body>

</html>
